<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ngy.mymud.ui.widget.BookView
        android:id="@+id/battle_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"/>

    <com.ngy.mymud.ui.widget.CharacterStatusBar
        android:id="@+id/player_status"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/battle_description"/>

    <Button
        android:id="@+id/testShowHealthChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_status"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>